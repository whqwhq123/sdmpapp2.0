<view class="join" wx:if="{{content['activityType'] == '见面礼'}}">
  <view class="join_submit" wx:if="userInfo.phone">领取</view>
  <button class="join_submit" open-type="getPhoneNumber" bindgetphonenumber="get_phone" wx:else>领取</button>
</view>
<view class="join" wx:else>
  <button open-type="share" class="join_left">分享</button>
  <view class="join_right_no" wx:if="{{content['signUpStatus'] == 1}}">已报名</view>
  <view class="join_right" bindtap="join_gift" wx:else>报名</view>
</view>
<view class="top">
  <view class="banner">
    <swiper class="nearby-shop-swiper" wx:if="{{content['swiper'].length > 0}}">
      <swiper-item wx:for="{{content['swiper']}}" wx:key="index" wx:for-item="value">
        <image src="{{value}}"></image>
      </swiper-item>
    </swiper>
  </view>
  <view class="gift">
    <view class="gift_title">{{content['activityName']}}</view>
    <view class="gift_time">{{content['startTime']}}至{{content['endTime']}}</view>
    <view class="gift_address">{{content['activityCity']}}{{content['activityArea']}}{{content['areaDetail']}}</view>
  </view>
</view>
<view class="content">
  <rich-text nodes="{{content['activityContent']}}"></rich-text>
</view>
<view class="user">
  <view class="user_left">
    <image src="{{ adviserInfo.userAvatar }}"></image>
    <view class="user_info">
      <view class="user_name">{{adviserInfo.userName}}</view>
      <view class="user_role">{{scene['1'] == '150' ? '销售顾问' : '销售经理' }}</view>
    </view>
  </view>
  <view class="user_right">
    
    <view class="phone">
      <text>{{adviserInfo.userPhone}}</text>
      <text>{{adviserInfo.dealerName}}</text>
    </view>
    <view class="line"></view>
    <image bindtap="phoneCall" src="{{oss_url}}/gift_show_phone"></image>
    
    <!-- <view class="clear"></view> -->
  </view>
</view>
<view class="block_bottom"></view>