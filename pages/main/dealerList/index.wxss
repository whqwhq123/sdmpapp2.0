.pageBody {
  width: 100%;
  position: relative;
  box-sizing: border-box;
}

.chooseAcityName {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 40rpx;
  font-size: 28rpx;
  color: #43425D;
  background-color: #F5F6FA;
  box-sizing: border-box;
}

.addressIcon {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  position: relative;
  top: -2rpx;
}

.dealer_box {
  width: 100%;
  position: relative;
  border-bottom: 12rpx solid #F5F6FA;
  padding: 30rpx 40rpx;
  box-sizing: border-box;
  color: #43425D;
  font-size: 24rpx;
  font-weight: 400;
  display: flex;
}

.dealerImg {
  width: 294rpx;
  height: 190rpx;
  margin-right: 30rpx;
  border-radius: 8rpx;
}

.dealer_info {
  flex: 1;
}

.dealerName {
  line-height: 28rpx;
  height: 56rpx;
  color: #1A1A1A;
  font-size: 28rpx;
  padding-bottom: 30rpx;
}

.dealerTel {
  line-height: 24rpx;
  color: #F02529;
  padding-bottom: 19rpx;
}

.telIcon {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  position: relative;
  top: -4rpx;
  left: 8rpx;
}

.dealerAddress {
  line-height: 44rpx;
  opacity: 0.7;
}