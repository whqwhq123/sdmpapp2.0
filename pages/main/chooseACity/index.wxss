.pageBody {
  width: 100%;
  position: relative;
  box-sizing: border-box;
}

.chooseAcity {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  padding-left: 40rpx;
  font-size: 28rpx;
  color: #43425D;
}

.chooseAcityName {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 40rpx;
  font-size: 28rpx;
  color: #43425D;
  background-color: #F5F6FA;
  box-sizing: border-box;
}

.addressIcon {
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  position: relative;
  top: -2rpx;
}

.indexListStyle {
  width: 100%;
  padding: 20rpx 40rpx 0 40rpx;
  box-sizing: border-box;
}

.van-index-anchor {
  padding: 0 !important;
  font-size: 24rpx !important;
  font-weight: bold !important;
  color: #43425D !important;
}

.listItem {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #43425D;
  border-bottom: 1px solid #D7D7E9;
}

.selectItem {
  color: #F02529;
}

.van-index-bar__index {
  font-size: 24rpx !important;
  font-weight: bold !important;
  color: #C8C8C8;
  padding: 0 10rpx !important;
}
.van-index-anchor--active {
  padding-left: 10rpx !important;
}

.hover{
  color: #F02529;
  font-weight: bold;
}