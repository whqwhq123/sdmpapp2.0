<view class="main" style="background-image:url({{oss_url}}/activity.png)">
  <mp-navigation-bar title="预约试驾" back="{{true}}" color="{{white}}"></mp-navigation-bar>
  <view class="top" bindtap="showSaleCars">
    <image class="carimg" src="{{ossUrl}}"></image>
    <view>2018款 30周年版30TFSI进取版</view>
    <image class="right" src="{{rightIcon}}"></image>
  </view>

  <view>
    <mp-form id="form">
      <view class="form-box">
        <!-- <mp-cells> -->
        <mp-cell prop="customerName" title="称呼" ext-class="user-wrap">
          <view style="display:flex;justify-content: space-between;align-items:center">
            <input style="width:200rpx;" value="{{customerName}}" bindinput="getName" class="weui-input"
              placeholder="请输入您的称呼" />
            <view class="genter">
              <view wx:for="{{genter}}" wx:key="index">
                <text class="{{index==activeIndex?'active':''}}" bindtap="genterSelect" data-index="{{index}}"
                  data-sex="{{item.sex}}">{{item.sex}}</text>
              </view>
            </view>
          </view>
        </mp-cell>
        <mp-cell prop="mobile" title="电话" ext-class="user-wrap">
          <!-- <input bindinput="formInputChange" data-field="mobile" class="weui-input" placeholder="请输入11位手机号码" /> -->
          <view class="form_right" wx:if="{{phone != ''}}">
            {{phone}}
          </view>
          <view class="form_right" wx:else>
            <input type="number" maxlength="11" wx:if="{{reject == 1}}" bindinput='form_phone_change'
              value='{{phone_input}}' />
            <button class="get_phone" open-type="getPhoneNumber" bindgetphonenumber="get_phone" wx:else>点击获取电话</button>
          </view>
        </mp-cell>

        <mp-cell prop="city" title="城市" ext-class="user-wrap">
          <view class="select_city">
            <view class="weui-cell weui-cell_select">
              <view class="weui-cell__bd">
                <picker bindchange="bindCountryChange" data-city="{{citys[countryIndex]}}" range="{{citys}}">
                  <view class="weui-select weui-select_in-select-after">{{city}}</view>
                </picker>
              </view>
            </view>
          </view>
        </mp-cell>
        <mp-cell prop="currentDate" title="日期" ext-class="user-wrap">
          <!-- <view style="display:flex;justify-content: space-between;align-items:center"> -->
              <!-- <view bindtap="showPopup" style="font-size: 28rpx;">{{currentDate?currentDate:'请选择日期'}}</view>
              <van-popup
                  show="{{ showtime }}"
                  position="bottom"
                  custom-style="height: 50%"
                >
                <van-datetime-picker
                type="date"
                value="{{ currentDate }}"
                bind:input="onInput"
                bind:confirm='confirmFun'
                bind:cancel="cancelFun"
                min-date="{{ minDate }}"
                formatter="{{ formatter }}"
              />
                </van-popup> 
          </view> -->
          <picker data-field="date" mode="date" value="{{date}}" bindchange="bindDateChange">
                  <view class="weui-input">{{date}}</view>
              </picker>
        </mp-cell>
        <view class="policy">
          点击立即询价即视为同意<text bindtap="to_agreement">《隐私政策》</text>
        </view>
      </view>
      <view>
        <view style="font-size:32rpx;color:#43425D;font-weight:600;margin-top:30rpx;padding:0 50rpx">经销商</view>
        <!-- <mp-cells> -->
        <scroll-view scroll-y="true" style="padding-bottom:220rpx">
          <radio-group bindchange="checkboxChange" style="margin:0 40rpx;">
            <label class="weui-cell weui-check__label weui-checkbox" wx:for="{{dealerList}}" wx:key="{{index}}" >
              <view class="weui-cell__hd">
                <radio value="{{item.deptId}}" checked="{{item.checked}}" color="#F02529"
                  style="transform:scale(0.7)" />
              </view>
              <view>
                <view style="width:100%;color:#43425D;font-weight:600;font-size:28rpx;">{{item.deptName}}</view>
                <view style="font-size:26rpx">
                  {{item.nameProvince}}{{item.nameCity}}{{item.nameArea}}{{item.companyAddr}}</view>
              </view>
            </label>
          </radio-group>
        </scroll-view>
        <!-- </mp-cells> -->
      </view>
    </mp-form>
  </view>

  <view class="ask-price-btn" bindtap="formValidate">
    <view class="button">申请试驾</view>
    <view style="color:#FA5151;text-align:center;font-size:26rpx;margin-top:14rpx">申请后会有专业的销售顾问联系您</view>
  </view>
</view>

<van-overlay show="{{show}}" style="z-index: 999;position: relative;" lock-scroll="true" class="car-model-tabs"
  bind:tap="hideOverlay">
  <scroll-view scroll-y="true" class="wrapper">
    <view style="font-size:32rpx;margin:30rpx 0;border-bottom:1rpx solid #D7D7E9;padding:30rpx">在售</view>
    <view class="content">
      <view class="car-list">
        <view class="car-item" wx:for="{{nowSaleCarsData}}" wx:key="index">
          <view>
            <text style="margin-right:20rpx">{{item.styleFullName}}</text>
            <text style="color:#F02529">{{item.price}}万</text>
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
</van-overlay>