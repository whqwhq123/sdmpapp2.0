 .weui-label{
  text-align: center;
}

.get_phone {
  height: 62rpx;
  display: block;
  text-align: left;
  top: -10rpx;
  background: #fff;
  font-size: 28rpx;
}
.weui-checkbox{
  align-items: flex-start;
}
