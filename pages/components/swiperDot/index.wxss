/* pages/components/swiperDot/index.wxss */
.dot-group{
 display: flex;
 height: 30rpx;
 line-height: 12rpx;
 justify-content: center;
 align-items: center;
}
.dot-item{
  margin: 0 8rpx;
  height: 100%;
  text-align: center;
}
.dot{
  display: inline-block;
  position: relative;
}
.dot-color-block{
  width: 12rpx;
  height: 12rpx;
  border-radius: 12rpx;
  background-color: #F2F1F6;
  transition: all 0.5s;
}
.active .dot-color-block{
  left: 0;
  width: 48rpx;
}