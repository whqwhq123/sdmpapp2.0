.page,
.page__bd,
.section {
  width: 100%;
  height: 100%;
}

image {
  max-width: 100%;
  max-height: 100%;
}

button::after {
  border: none;
}

.clear {
  clear: both;
}

/* 适配iPhoneX */
.fix-iphonex-button {
  bottom: 66rpx !important;
}

.fix-iphonex-button::after {
  content: ' ';
  position: fixed;
  bottom: 0 !important;
  height: 68rpx !important;
  width: 100%;
  background: #fff;
}